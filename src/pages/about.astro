---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import AnimatedCounter from '../components/AnimatedCounter';
import FadeIn from '../components/FadeIn';

const heroImages = [
	'https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=1600&h=900&fit=crop',
	'https://images.unsplash.com/photo-1531545514256-b1400bc00f31?w=1600&h=900&fit=crop',
	'https://images.unsplash.com/photo-1542744173-8e7e53415bb0?w=1600&h=900&fit=crop'
];

const values = [
  {
    title: "Excellence",
    description: "We're committed to delivering world-class training that exceeds expectations and drives real results.",
    image: "https://images.unsplash.com/photo-1552664730-d307ca884978?w=800&h=600&fit=crop"
  },
  {
    title: "Partnership",
    description: "We work alongside you as trusted partners, invested in your success and committed to your growth.",
    image: "https://images.unsplash.com/photo-1573164713988-8665fc963095?w=800&h=600&fit=crop"
  },
  {
    title: "Innovation",
    description: "We continuously evolve our methods, incorporating the latest research and proven best practices.",
    image: "https://images.unsplash.com/photo-1553484771-371a605b060b?w=800&h=600&fit=crop"
  },
  {
    title: "Impact",
    description: "We focus on measurable outcomes that make a real difference to your team and your bottom line.",
    image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&h=600&fit=crop"
  }
];

const teamImages = [
	'https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=800&h=600&fit=crop',
	'https://images.unsplash.com/photo-1560250097-0b93528c311a?w=800&h=600&fit=crop',
	'https://images.unsplash.com/photo-1519085360753-af0119f7cbe7?w=800&h=600&fit=crop'
];
---

<Layout
  title="About Us - My Way Training"
  description="Learn about My Way Training's mission to transform teams through expert corporate training. Meet our experienced team and discover our values."
>
  <Navbar darkBackground={true} />

  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img
        src={heroImages[0]}
        alt="My Way Training Team"
        class="w-full h-full object-cover"
      />
      <!-- Navy Blue Transparent Overlay -->
      <div class="absolute inset-0 bg-primary/80"></div>
    </div>

    <!-- Content -->
    <div class="container-custom relative z-10">
      <FadeIn client:load direction="down">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
            Transforming Teams Since 2010
          </h1>
          <p class="text-xl text-gray-200 leading-relaxed">
            We're passionate about helping organizations unlock their people's potential and build cultures of excellence, collaboration, and continuous growth.
          </p>
        </div>
      </FadeIn>
    </div>
  </section>

  <!-- Our Story Section -->
  <section class="py-20 bg-white mt-10">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <FadeIn client:load direction="up">
          <div class="mb-12">
            <h2 class="section-heading text-primary mb-6">Our Story</h2>
            <div class="space-y-6 text-lg text-gray-700 leading-relaxed">
              <p>
                My Way Training was founded in 2010 with a simple but powerful belief: that every organization has untapped potential waiting to be unlocked through the right training and development.
              </p>
              <p>
                What started as a one-person consultancy has grown into a team of expert trainers and consultants who have worked with over 500 organizations across the UK. From startups to multinational corporations, we've helped teams of all sizes transform their performance, culture, and results.
              </p>
              <p>
                Our approach is different. We don't believe in one-size-fits-all training programs or generic workshops. Instead, we take the time to understand your unique challenges, culture, and objectives. Then we design and deliver training that's tailored specifically to your needsâ€”training that drives real, measurable change.
              </p>
              <p>
                Today, we're proud to be recognized as one of the UK's leading corporate training providers, with a 95% client satisfaction rate and thousands of professionals developed across diverse industries.
              </p>
            </div>
          </div>
        </FadeIn>

        <!-- Stats with Animated Counters -->
        <FadeIn client:load direction="up" className="grid grid-cols-2 md:grid-cols-4 gap-8 py-12 border-y border-gray-200">
          <div class="text-center">
            <AnimatedCounter client:load end={500} suffix="+" className="text-5xl font-bold text-accent mb-2" />
            <div class="text-gray-600 font-medium">Organizations</div>
          </div>
          <div class="text-center">
            <AnimatedCounter client:load end={10000} suffix="+" className="text-5xl font-bold text-accent mb-2" />
            <div class="text-gray-600 font-medium">Professionals</div>
          </div>
          <div class="text-center">
            <AnimatedCounter client:load end={95} suffix="%" className="text-5xl font-bold text-accent mb-2" />
            <div class="text-gray-600 font-medium">Satisfaction</div>
          </div>
          <div class="text-center">
            <AnimatedCounter client:load end={15} suffix="+" className="text-5xl font-bold text-accent mb-2" />
            <div class="text-gray-600 font-medium">Years</div>
          </div>
        </FadeIn>
      </div>
    </div>
  </section>

  <!-- Our Values Section -->
  <section class="py-20 bg-gray-50">
    <div class="container-custom">
      <FadeIn client:load direction="up" className="text-center mb-16">
        <h2 class="section-heading text-primary mb-4">Our Core Values</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          These principles guide everything we do and every decision we make.
        </p>
      </FadeIn>

      <div class="relative max-w-7xl mx-auto">
        <!-- Horizontal connecting line (hidden on mobile) -->
        <div class="hidden md:block absolute top-12 left-0 right-0 h-1 bg-accent/20" style="z-index: 0;"></div>

        <!-- Values Grid -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 relative" style="z-index: 1;">
          {values.map((value, index) => (
            <FadeIn client:load direction="up" delay={index * 100}>
              <div class="text-center">
                <!-- Number Circle -->
                <div class="w-24 h-24 mx-auto mb-6 relative group animate-float" style={`animation-delay: ${index * 0.2}s;`}>
                  <!-- Outer glow ring -->
                  <div class="absolute inset-0 bg-accent/30 rounded-full blur-lg group-hover:blur-xl transition-all duration-300 animate-pulse-glow"></div>
                  <!-- Rotating border ring -->
                  <div class="absolute inset-0 rounded-full bg-gradient-to-br from-accent via-primary to-accent animate-spin-slow opacity-60"></div>
                  <!-- Inner white ring -->
                  <div class="absolute inset-1 bg-white rounded-full"></div>
                  <!-- Main circle with gradient -->
                  <div class="absolute inset-2 bg-gradient-to-br from-accent to-primary rounded-full flex items-center justify-center shadow-xl group-hover:scale-110 transition-transform duration-300">
                    <span class="text-4xl font-bold text-white relative z-10">{index + 1}</span>
                  </div>
                </div>

                <!-- Title -->
                <h3 class="text-2xl font-bold text-primary mb-4 hover:text-accent transition-colors duration-300">
                  {value.title}
                </h3>

                <!-- Description -->
                <p class="text-gray-600 leading-relaxed">
                  {value.description}
                </p>
              </div>
            </FadeIn>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Our Team Section -->
  <section class="py-20 bg-white">
    <div class="container-custom">
      <FadeIn client:load direction="up" className="text-center mb-16">
        <h2 class="section-heading text-primary mb-4">Meet Our Expert Team</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Experienced professionals dedicated to your team's success.
        </p>
      </FadeIn>

      <div class="grid md:grid-cols-3 gap-10 max-w-6xl mx-auto">
        <FadeIn client:load direction="up" delay={100}>
          <div class="card text-center group">
            <div class="mb-6 overflow-hidden rounded-lg">
              <img
                src="https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=400&h=400&fit=crop"
                alt="Sarah Mitchell"
                class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-500"
              />
            </div>
            <h3 class="text-2xl font-semibold text-primary mb-2">Sarah Mitchell</h3>
            <p class="text-accent font-medium mb-4">Founder & Lead Trainer</p>
            <p class="text-gray-600 leading-relaxed mb-6">15+ years experience in corporate training and organizational development. Former HR Director at Fortune 500 companies.</p>
            <div class="space-y-2">
              <p class="text-sm font-semibold text-gray-800">Areas of Expertise:</p>
              <div class="flex flex-wrap gap-2 justify-center">
                <span class="px-3 py-1 bg-accent/10 text-accent text-sm rounded-full">Leadership</span>
                <span class="px-3 py-1 bg-accent/10 text-accent text-sm rounded-full">Change Management</span>
                <span class="px-3 py-1 bg-accent/10 text-accent text-sm rounded-full">Executive Coaching</span>
              </div>
            </div>
          </div>
        </FadeIn>

        <FadeIn client:load direction="up" delay={200}>
          <div class="card text-center group">
            <div class="mb-6 overflow-hidden rounded-lg">
              <img
                src="https://images.unsplash.com/photo-1560250097-0b93528c311a?w=400&h=400&fit=crop"
                alt="James Patterson"
                class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-500"
              />
            </div>
            <h3 class="text-2xl font-semibold text-primary mb-2">James Patterson</h3>
            <p class="text-accent font-medium mb-4">Senior Training Consultant</p>
            <p class="text-gray-600 leading-relaxed mb-6">Specialist in communication skills and team dynamics. Certified professional coach with MBA in Organizational Psychology.</p>
            <div class="space-y-2">
              <p class="text-sm font-semibold text-gray-800">Areas of Expertise:</p>
              <div class="flex flex-wrap gap-2 justify-center">
                <span class="px-3 py-1 bg-accent/10 text-accent text-sm rounded-full">Communication</span>
                <span class="px-3 py-1 bg-accent/10 text-accent text-sm rounded-full">Team Building</span>
                <span class="px-3 py-1 bg-accent/10 text-accent text-sm rounded-full">Conflict Resolution</span>
              </div>
            </div>
          </div>
        </FadeIn>

        <FadeIn client:load direction="up" delay={300}>
          <div class="card text-center group">
            <div class="mb-6 overflow-hidden rounded-lg">
              <img
                src="https://images.unsplash.com/photo-1519085360753-af0119f7cbe7?w=400&h=400&fit=crop"
                alt="Dr. Amara Okafor"
                class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-500"
              />
            </div>
            <h3 class="text-2xl font-semibold text-primary mb-2">Dr. Amara Okafor</h3>
            <p class="text-accent font-medium mb-4">Learning & Development Expert</p>
            <p class="text-gray-600 leading-relaxed mb-6">PhD in Adult Learning. 12 years designing and delivering training programs across diverse industries and cultures.</p>
            <div class="space-y-2">
              <p class="text-sm font-semibold text-gray-800">Areas of Expertise:</p>
              <div class="flex flex-wrap gap-2 justify-center">
                <span class="px-3 py-1 bg-accent/10 text-accent text-sm rounded-full">Curriculum Design</span>
                <span class="px-3 py-1 bg-accent/10 text-accent text-sm rounded-full">DEI Training</span>
                <span class="px-3 py-1 bg-accent/10 text-accent text-sm rounded-full">Skills Development</span>
              </div>
            </div>
          </div>
        </FadeIn>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-primary via-secondary to-primary py-20">
    <div class="container-custom">
      <FadeIn client:load direction="up">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">Partner with Us</h2>
          <p class="text-xl text-gray-200 mb-10 leading-relaxed">
            Let's discuss how we can help transform your team and drive your business forward.
          </p>
          <a href="/contact#form" class="bg-accent text-white px-8 py-4 rounded-md font-medium uppercase text-sm hover:bg-buttonHover transition-colors duration-300 inline-flex items-center space-x-2">
            <span>Get in Touch</span>
          </a>
        </div>
      </FadeIn>
    </div>
  </section>

  <Footer />
</Layout>
