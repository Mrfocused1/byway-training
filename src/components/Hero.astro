---
import { FlipWords } from './FlipWords';

interface Props {
  title: string;
  subtitle: string;
  primaryCTA?: string;
  primaryCTALink?: string;
  secondaryCTA?: string;
  secondaryCTALink?: string;
}

const {
  title,
  subtitle,
  primaryCTA = "Get Started",
  primaryCTALink = "/contact",
  secondaryCTA = "Learn More",
  secondaryCTALink = "/services"
} = Astro.props;

// Words to flip through
const flipWords = ["Your Team", "Your Business", "Your Future", "Your Success"];
---

<section class="relative md:min-h-screen flex flex-col justify-between overflow-hidden">
  <!-- Hero Background Image (Desktop only) -->
  <div class="hidden md:block absolute inset-0">
    <img
      src="https://github.com/Mrfocused1/byway-training/blob/main/Generated%20Image%20October%2009,%202025%20-%204_53AM.png?raw=true"
      alt="Hero background"
      class="w-full h-full object-cover fade-in"
    />
    <!-- Desktop overlays -->
    <div class="absolute inset-0 bg-gradient-to-b from-white/70 via-white/20 to-transparent" style="height: 30%;"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-white/80 via-white/50 to-transparent" style="width: 50%;"></div>
    <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-white via-white/90 to-transparent" style="height: 30%;"></div>
  </div>

  <!-- Mobile Layout -->
  <div class="md:hidden flex flex-col">
    <!-- Hero Section with Background -->
    <div class="relative min-h-[500px] pt-20 pb-8">
      <!-- Background Image -->
      <div class="absolute inset-0 z-0">
        <img
          src="https://github.com/Mrfocused1/byway-training/blob/main/curcam.jpg?raw=true"
          alt="Hero background"
          class="w-full h-full object-cover object-center"
        />
        <!-- Left gradient: 60% width, 80% opacity - white -->
        <div class="absolute top-0 left-0 bottom-0 bg-gradient-to-r from-white/80 to-transparent" style="width: 60%;"></div>
        <!-- Bottom gradient: 15% height - white gradient -->
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-white via-white/90 to-transparent" style="height: 15%;"></div>
      </div>

      <!-- Content: Title and Description -->
      <div class="relative z-10 h-full flex flex-col items-start justify-center text-left px-6 w-full">
        <!-- Title -->
        <h1 class="text-4xl font-bold tracking-tight text-black leading-tight mb-6">
          Transform<br />
          <FlipWords client:load words={flipWords} className="text-black text-4xl" />
        </h1>

        <!-- Description -->
        <p class="max-w-2xl text-lg leading-8 text-gray-900">
          {subtitle}
        </p>
      </div>
    </div>
  </div>

  <!-- Desktop Layout (unchanged) -->
  <div class="hidden md:flex flex-1 items-start">
    <div class="container-custom relative z-10 py-32 md:pt-48 md:pb-32 w-full">
      <div class="text-left" style="max-width: 600px;">
        <!-- Main Title -->
        <h1 class="hero-title text-black mb-1 pt-2 slide-down flex flex-wrap justify-left items-center" style="max-width: 720px;">
          <span>Transform</span>
          <FlipWords client:load words={flipWords} className="text-black" />
        </h1>

        <!-- Subtitle -->
        <p class="text-lg md:text-xl text-black mb-8 leading-relaxed slide-down stagger-1">
          {subtitle}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-start justify-start gap-4 slide-down stagger-2">
          <a href={primaryCTALink} class="px-8 py-4 bg-accent text-white font-medium uppercase text-base rounded-md transition-all duration-300 hover:bg-buttonHover hover:scale-105 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 inline-flex items-center space-x-2">
            <span>{primaryCTA}</span>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a href={secondaryCTALink} class="px-8 py-4 bg-transparent border-2 border-black text-black font-medium uppercase text-base rounded-md transition-all duration-300 hover:bg-black hover:text-white hover:scale-105 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 inline-flex items-center">
            {secondaryCTA}
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator (Desktop only) -->
  <div class="hidden md:block absolute bottom-2 left-1/2 transform -translate-x-1/2 animate-bounce z-20">
    <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center">
      <div class="w-1.5 h-3 bg-white rounded-full mt-2"></div>
    </div>
  </div>
</section>
